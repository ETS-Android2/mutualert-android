<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".ui.EmergencyFragment">

    <com.ncorti.slidetoact.SlideToActView
        android:id="@+id/slideToActView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:elevation="12dp"
        app:animation_duration="600"
        app:area_margin="6dp"
        app:complete_icon="@drawable/ic_baseline_location_disabled_white_24"
        app:icon_margin="5dp"
        app:outer_color="@color/md_grey_100"
        app:inner_color="@color/colorAccent"
        app:text="EMERGENCIA"
        app:text_size="@dimen/font_h5_size"
        app:text_style="bold"
        app:slider_icon="@drawable/ic_baseline_my_location_white_24"
        app:slider_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>